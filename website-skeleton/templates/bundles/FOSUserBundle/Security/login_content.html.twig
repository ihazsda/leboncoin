{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block login_modal %}{% endblock %}

{% block body %}
    <div class="row">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form role="form" data-toggle="validator" action="{{ path('fos_user_security_check') }}" method="post">
            <div class="row">
                <div class="form-group col-10 offset-1">
                    <label for="InputEmail">Username/Email address</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="username" name="_username"
                               placeholder="your email" data-error="Ops! Invalid eMail address" required>
                    </div>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-10 offset-1">
                    <label for="InputPassword">Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="_password"
                               placeholder="password" data-error="Please type password" required>
                    </div>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-10 offset-1 text-center">
                    <div class="input-group">
                        <input type="submit" name="submit" value="Connect"
                               class="btn btn-info w-100">
                    </div>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        </form>
    </div>

{% endblock %}